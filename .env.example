# GamifyIQ Environment Configuration

# OpenAI API Key (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://gamifyiq:gamifyiq_dev_password@localhost:5432/gamifyiq

# Redis Configuration
REDIS_URL=redis://localhost:6379

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=gamifyiq
MINIO_SECRET_KEY=gamifyiq_minio_password
MINIO_BUCKET=gamifyiq-documents
MINIO_USE_SSL=false

# Application URLs
API_URL=http://localhost:4000
WEB_URL=http://localhost:3000

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug