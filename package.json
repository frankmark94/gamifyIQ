{
  "name": "gamifyiq",
  "version": "1.0.0",
  "description": "GenAI-powered SaaS platform for gamified corporate training",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web-next\"",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:web-next": "npm run dev --workspace=apps/web-next",
    "dev:api": "npm run dev --workspace=apps/api",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=apps/web",
    "build:web-next": "npm run build --workspace=apps/web-next",
    "build:api": "npm run build --workspace=apps/api",
    "db:migrate": "npm run migrate --workspace=packages/db",
    "db:generate": "npm run generate --workspace=packages/db",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "install:all": "npm install && npm run build --workspace=packages/utils && npm run build --workspace=packages/ai-core && npm run build --workspace=packages/db"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}