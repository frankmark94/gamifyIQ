# GamifyIQ API Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://gamifyiq:gamifyiq_dev_password@localhost:5432/gamifyiq

# Redis
REDIS_URL=redis://localhost:6379

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=3000

# File Storage (MinIO/S3)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=gamifyiq
MINIO_SECRET_KEY=gamifyiq_minio_password
MINIO_BUCKET=gamifyiq-documents
MINIO_USE_SSL=false

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# JWT Configuration (if implementing auth)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Health Check
HEALTH_CHECK_ENDPOINT=/health