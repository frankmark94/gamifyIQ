# GamifyIQ Web Frontend Environment Configuration

# API Configuration
VITE_API_URL=http://localhost:4000
VITE_TRPC_URL=http://localhost:4000/trpc

# Application Configuration
VITE_APP_NAME=GamifyIQ
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=GenAI-powered corporate training platform

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_DEBUG_MODE=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt

# Auth Configuration (when implementing)
VITE_AUTH_PROVIDER=clerk  # or nextauth
VITE_CLERK_PUBLISHABLE_KEY=your_clerk_key_here

# Analytics (when implementing)
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Error Monitoring (when implementing) 
VITE_SENTRY_DSN=your_sentry_dsn_here

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Development Settings
VITE_ENABLE_DEVTOOLS=true
VITE_LOG_LEVEL=debug